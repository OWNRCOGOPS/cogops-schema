<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="CogOpsRecord">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="SpecVersion" type="xs:string"/>
        <xs:element name="AssetName" type="xs:string"/>
        <xs:element name="TransactionTimestamp" type="xs:dateTime"/>
        <xs:element name="OutputType" type="xs:string"/>
        <xs:element name="Cost" type="xs:decimal" minOccurs="0"/>
        <xs:element name="Value" type="xs:decimal" minOccurs="0"/>
        <xs:element name="Risk" type="xs:decimal" minOccurs="0"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
